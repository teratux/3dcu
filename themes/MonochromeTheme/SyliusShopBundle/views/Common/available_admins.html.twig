{% for admin in admins %}
{% set role = '' %}
{% set sep = '' %}

{% if 'ROLE_ADMINISTRATION_ACCESS' in admin.roles %}
    {% set role = 'Administrador' %}
    {% set sep = ', ' %}
{% endif %}

{% if 'ROLE_BLOG' in admin.roles %}
    {% set role = role ~ sep ~ 'Editor' %}
    {% set sep = ', ' %}
{% endif %}

{% if 'ROLE_PROJECT' in admin.roles %}
    {% set role = role ~ sep ~ 'Proyectista' %}
    {% set sep = ', ' %}
{% endif %}

{% if 'ROLE_DESIGNER' in admin.roles %}
    {% set role = role ~ sep ~ 'Dise√±ador' %}
    {% set sep = ', ' %}
{% endif %}

{% if 'ROLE_MAKER' in admin.roles %}
    {% set role = role ~ sep ~ 'Fabricante' %}
    {% set sep = ', ' %}
{% endif %}


<div class="col-sm-6 col-lg-4">
    <div class="card clean-card text-center">
        {% if admin.logo != null %}
            <div class="user_logo card-img-top d-block mx-auto" style="background-size: cover; background-image: url('{{ app.request.getSchemeAndHttpHost() ~ app.request.getBaseURL()|trim('index.php') ~ '/uploads/media/admins/' ~ admin.id ~ '/' ~ admin.logo.filename }}')"></div>
        {% else %}
                <div class="user_logo card-img-top d-block mx-auto" style="background-size: cover; background-position: center; background-image: url('{{ asset('bundles/syliusshop/img/avatars/avatar1.jpg') }}')"></div>
        {% endif %}
        <div class="card-body info">
            <h4 class="card-title">{{ admin.firstName ~ " " ~ admin.lastName }} :: {{ role }} </h4>
            <p class="card-text">{{ admin.title }}</p>
            {# <div class="icons"><a href="#"><i class="icon-social-facebook" style="color: rgb(0,0,0);"></i></a><a href="#"><i class="icon-social-instagram" style="color: rgb(0,0,0);"></i></a><a href="#"><i class="icon-social-twitter" style="color: rgb(0,0,0);"></i></a></div> #}
        </div>
    </div>
</div>

{% endfor %}